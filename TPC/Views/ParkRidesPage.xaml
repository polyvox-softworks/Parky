<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TPC.Views.ParkRidesPage"
             Title="Rides">

    <Grid
        Padding="5"
        RowDefinitions="50,*"
        ColumnDefinitions="*">

        <SearchBar
            Grid.Row="0"
            Grid.Column="0"
            x:Name="RideSearchBar"
            Placeholder="Search for a Ride"
            TextChanged="SearchBar_TextChanged">
        </SearchBar>

        <ListView 
            Grid.Row="1"
            Grid.Column="0"
            RowHeight="50"
            BackgroundColor="Transparent"
            x:Name="listRides"
            ItemTapped="listRides_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding name}"
                              Detail="{Binding wait_time}">
                    </TextCell>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>